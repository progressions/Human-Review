!!!
%html
  %head
    /
      = "Sprint #{@version} #{@sprint_name}"
      = "'#{@view}' view for #{@domain}: oib.me"
      = "built at #{Time.now}"
      = "commit #{@hash}, '#{@message}'"
      
    - test_for_required_variables

    %title= "#{@view} view for #{@domain}: #{@server}.otherinbox.com"

    = render :partial => 'stylesheets'
    
    / Prototype & Scriptaculous

    /= javascript_include "prototype.js"
    /= javascript_include "scriptaculous.js"
    
    = javascript_include "https://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"
    

  %body{:class => @view}
    = render :partial => 'loading'
  
    #main{:style => "display: none;"}

      #content
        = @content
        
    #upgrade{:style => "display: none;"}
      = render :partial => 'upgrade'
    
    = render :partial => 'javascripts'
    
/
  = "Sprint #{@version} #{@sprint_name}"
  = "'#{@view}' view for #{@domain}: oib.me"
  = "built at #{Time.now}"
  = "commit #{@hash}, '#{@message}'"